    <main class="max-w-lg p-8 mx-auto my-10 bg-white rounded-lg shadow-2xl md:p-12">
  <section>
    <h3 class="text-2xl font-bold">Welcome to Tutorials World</h3>
    <p class="pt-2 text-gray-600">Sign in to your account.</p>
  </section>

  <section class="mt-10">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'flex flex-col'}) do |f| %>
      <div class="pt-3 mb-6 bg-gray-200 rounded">
        <label class="block mb-2 ml-3 text-sm font-bold text-gray-700" for="email">Email</label>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full px-3 pb-3 text-gray-700 transition duration-500 bg-gray-200 border-b-4 border-gray-300 rounded focus:outline-none focus:border-purple-600' %>
      </div>
      <div class="pt-3 mb-6 bg-gray-200 rounded">
        <label class="block mb-2 ml-3 text-sm font-bold text-gray-700" for="password">Password</label>
        <%= f.password_field :password, autocomplete: "current-password", class: 'w-full px-3 pb-3 text-gray-700 transition duration-500 bg-gray-200 border-b-4 border-gray-300 rounded focus:outline-none focus:border-purple-600' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <%= f.submit "Log in", class: 'mt-6 block py-2 font-bold text-white transition duration-200 bg-purple-600 rounded shadow-lg hover:bg-purple-700 hover:shadow-xl' %>
    <% end %>
  </section>
</main>

<div class="max-w-lg mx-auto mt-12 mb-6 text-center">
  <p class="text-black dark:text-gray-300">Don't have an account?
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "Sign up.", new_registration_path(resource_name), class: 'font-bold text-purple-700 hover:underline dark:text-blue-600' %>
    <% end %>
  </p>
</div>
